<div class="row col-md-8 col-md-offset-2">
  <div class="col-md-3">
    <%= image_tag @client.image.url(:medium), :class => 'img-responsive'%>
  </div>
  <div class="col-md-8">
  <h2><%= @client.first_name%> <%= @client.last_name%></h2>
  <h6><span class="glyphicon glyphicon-time"></span>&nbsp;&nbsp;<%= @client.age %> year old <%= @client.gender %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-heart"></span>&nbsp;&nbsp;by <%= @client.guardian %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;in <%= @client.location %></h6>
    <p><h4><%= @client.description %></h4></p>

  <hr>

    <div class="col-md-6x">
      <h5>REQUIREMENTS</h5>
      <ul>
        <% @client.requirements.each do |requirement| %>
        <li><%= requirement.step %></li>
        <%end%>
      </ul>
    </div>

    <br><br>

    <div class="col-md-6x">
      <h5>PARTICULARITIES</h5>
      <ul>
        <% @client.particularities.each do |particularity| %>
        <li><%= particularity.note %></li>
        <%end%>
      </ul>
      </div>
    </div>

<br>

<div class="col-md-1">
  <div class="page-links"><%= link_to "EDIT", edit_client_path(@client), :class => 'btn btn-primary btn-sm'%></div>
</div>

</div>

