<% if @client.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@client.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
    <% @client.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @client, :html => {:class => 'form-horizontal'} do |f| %>

<div class="form-group">
  <%= f.label :first_name%>
  <%= f.text_field :first_name%>
</div>

<div class="form-group">
  <%= f.label :last_name%>
  <%= f.text_field :last_name%>
</div>

<div class="form-group">
  <%= f.file_field :image %>
</div>

<div class="form-group">
  <%= f.label :description%>
  <%= f.text_field :description%>
</div>

<div class="form-group">
  <%= f.label :age%>
  <%= f.number_field :age%>
</div>

<div class="form-group">
  <%= f.label :gender%>
  <%= f.text_field :gender%>
</div>

<div class="form-group">
  <%= f.label :location%>
  <%= f.text_field :location%>
</div>

<div class="form-group">
  <%= f.label :guardian%>
  <%= f.text_field :guardian%>
</div>


<h3>Particularities</h3>
  <div id="particularities">
    <%= f.fields_for :particularities do |particularity| %>
      <%= render 'particularity_fields', :f => particularity %>
    <%end%>

    <div class="links">
      <%= link_to_add_association 'Add particularity', f, :particularities %>
    </div>
  </div>

  <h3>Requirements</h3>
    <div id="requirements">
      <%= f.fields_for :requirements do |requirement| %>
        <%= render 'requirement_fields', :f => requirement %>
      <%end%>

      <div class="links">
        <%= link_to_add_association 'Add requirement', f, :requirements %>
      </div>
    </div>

<div class="form-group">
  <%= f. submit %>
</div>
<%end%>
